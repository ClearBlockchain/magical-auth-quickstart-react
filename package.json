{
  "name": "quickstart-react",
  "version": "1.0.0",
  "description": "Quick start tutorial for secure phone authentication",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:java": "concurrently \"npm run server:java\" \"npm run client\"",
    "server": "tsx watch server.ts",
    "server:java": "gradle bootRun",
    "server:java:build": "gradle build",
    "server:java:clean": "gradle clean",
    "server:build": "tsc",
    "server:prod": "node dist/server.js",
    "client": "vite",
    "build": "vite build",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "glide-sdk": "3.0.3",
    "glide-web-client-sdk": "3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.0.6"
  }
}
